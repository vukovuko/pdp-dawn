{{ 'section-image-text-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="image-with-text__container">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {% when 'image' %}
          <div class="image-with-text__block">
            {% if block.settings.image != blank %}
              {{
                block.settings.image
                | image_url: width: 1100
                | image_tag:
                  loading: 'lazy',
                  widths: '50, 100, 150, 200, 300, 400, 550, 800, 1100',
                  width: block.settings.width,
                  height: block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round
              }}
            {% else %}
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
        {% when 'text' %}
          <div class="image-with-text__block">
            <div class="image-with-text__text--wrapper">
              <div class="image-with-text__text--content">
                {% unless block.settings.icon == 'none' %}
                  <div class="image-with-text__text--icon">
                    {% render 'icons' with block.settings.icon %}
                  </div>
                {% endunless %}
                {% if block.settings.title != blank %}
                  <p class="image-with-text__text--title">{{ block.settings.title }}</p>
                {% endif %}
                {% if block.settings.subtitle != blank %}
                  <p class="image-with-text__text--subtitle">{{ block.settings.subtitle }}</p>
                {% endif %}
                {% if block.settings.text != blank %}
                  <div class="rte">{{ block.settings.text }}</div>
                {% endif %}
              </div>
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Image and text grid",
  "class": "image-text-grid",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Image",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "name": "Text",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "The Craft"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "craft",
              "label": "Craft"
            },
          ],
          "default": "craft"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "<b>100% natural pigments &/or mordants to dye fibers and garments</b>"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Describe your product in a few sentences. Use the space to tell your customers what they can expect from your product.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image and text grid"
    }
  ]
}
{% endschema %}